        <div class="product-name"><%= @banana_nut.type %></div>
        <p><%= @banana_nut.description %></p>
        <p class="price"><%= @banana_nut.price %></p>
    </div>
    <div class="product">
     <div class="image-box-type-one">
        <img src="images/cheddar-biscuit.jpg" alt="Cheddar Biscuit">
        </div>
        <div class="product-name"><%= @cheddar_biscuit.type %></div>
        <p><%= @cheddar_biscuit.description %></p>
        <p class="price"><%= @cheddar_biscuit.price %></p>
    </div>
</div>