    <div id="friendly-header">
        friendly
    </div>
    <div id="bakery-header">
        MUFFINS
    </div>
</div>

<div class="product-display">
    <div class="product">
        <div class="image-box-type-one">
        <img src="images/blueberry-muffin.jpg" alt="Blueberry Muffins">
        </div>
        <div class="product-name"><%= @blueberry.type %></div>
